---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { Image } from 'astro:assets';
import HeroImage from '../assets/blog-placeholder-5.jpg';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

import ScoreboardIslandFootball from '../islands/ScoreboardIslandFootball.jsx';
import ScoreboardIslandHoops from '../islands/ScoreboardIslandHoops.jsx';
import TeamStatsIsland from '../islands/TeamStatsIsland.jsx';
import EquipValueIsland from '../islands/EquipValueIsland.jsx'

import "../styles/scoreboard.css";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
		    <section>
                <h1>Welcome</h1>
                <p>
                    You have stumbled upon the portfolio site and personal blog of Nick Poet.
                    Or you came here on purpose. Either way you should have something better to do.
                </p>
                <p>
                    Here are some suggestions:
                </p>
			</section>

			<section>
				<h3>
                <a
                  href="https://github.com/npoet/cfbscores_py"
                  target="_blank"
                  rel="noopener noreferrer"
                  style="text-decoration: none; color: inherit;"
                >
                  Upcoming Football
                </a>
              </h3>
				<ScoreboardIslandFootball client:load />
			</section>

			<section>
				<h3>
                <a
                  href="https://github.com/npoet/cbbscores"
                  target="_blank"
                  rel="noopener noreferrer"
                  style="text-decoration: none; color: inherit;"
                >
                  Upcoming Basketball
                </a>
              </h3>
				<ScoreboardIslandHoops client:load />
			</section>

			<section>
              <h3>
                <a
                  href="https://github.com/npoet/cfbscores_react"
                  target="_blank"
                  rel="noopener noreferrer"
                  style="text-decoration: none; color: inherit;"
                >
                  CFBData Statistical Reference
                </a>
              </h3>
              <TeamStatsIsland client:load defaultTeam="Michigan" />
            </section>

            <section>
              <h3>
                <a
                  href="https://github.com/npoet/an-osrs-project"
                  target="_blank"
                  rel="noopener noreferrer"
                  style="text-decoration: none; color: inherit;"
                >
                  OSRS Equip Value
                </a>
              </h3>
              <EquipValueIsland client:load />
            </section>

            <section>
                <h5>
                    Site source:
                </h5>
                <p>
                    Astro is cool -- <a href="https://github.com/npoet/np-dev-astro" target="_blank">np-dev-astro</a>
                </p>
			</section>
		</main>
		<Footer />
	</body>
</html>
