---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
    <div class="social-links">

      <div class="icon-wrapper">
        <a href="/resume.pdf" download target="_blank" class="icon-link">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="currentColor">
            <path d="M6 2h9l5 5v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1zm9 0v5h5M9 12h6v2H9v-2zm0 4h6v2H9v-2z"/>
          </svg>
        </a>
        <span class="tooltip">Download Resume</span>
      </div>

      <div class="icon-wrapper">
        <a href="https://github.com/npoet" target="_blank" class="icon-link">
          <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
            <path fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
          </svg>
        </a>
      </div>

    </div>
  </nav>
</header>

<style>
header {
  margin: 0;
  padding: 0 1em;
  background: white;
  box-shadow: 0 2px 8px rgba(var(--black), 5%);
}
h2 {
  margin: 0;
  font-size: 1em;
}
h2 a,
h2 a.active {
  text-decoration: none;
}
nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.25em 0;
}
nav a {
  color: var(--black);
  text-decoration: none;
  transition: border-color 0.2s;
  padding: 1em 0.5em;
  position: relative;
}
nav a:hover {
  color: var(--accent);
}
nav a svg {
  display: block;
  transition: fill 0.2s;
}
nav a:hover svg {
  fill: var(--accent);
}
.social-links {
  display: flex;
  align-items: center;
}
.icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 0.5em;
}
.tooltip {
  visibility: hidden;
  background-color: var(--black);
  color: white;
  text-align: center;
  padding: 0.3em 0.5em;
  border-radius: 4px;
  position: absolute;
  bottom: 120%;
  left: 50%;
  transform: translateX(-50%);
  font-size: 0.75em;
  white-space: nowrap;
  opacity: 0;
  transition: opacity 0.2s;
  pointer-events: none;
}
.icon-wrapper:hover .tooltip {
  visibility: visible;
  opacity: 1;
}
@media (max-width: 720px) {
  .social-links {
    display: none;
  }
}
</style>
